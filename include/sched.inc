%ifndef SCHED_INC
%define SCHED_INC

%include "limits.inc"

NSIG				equ		32
NR_VZONES_PER_PROCESS		equ		10
SIZE_OF_SIGACTION		equ		16

PROCESS_OFFSET_NAME				equ		0
PROCESS_OFFSET_PID				equ		PROCESS_OFFSET_NAME+4
PROCESS_OFFSET_FATHER			equ		PROCESS_OFFSET_PID+4
PROCESS_OFFSET_STATE			equ		PROCESS_OFFSET_FATHER+4
PROCESS_OFFSET_COUNTER			equ		PROCESS_OFFSET_STATE+4
PROCESS_OFFSET_TOTAL_COUNTER	equ		PROCESS_OFFSET_COUNTER + 4
PROCESS_OFFSET_PRIOPRITY		equ		PROCESS_OFFSET_TOTAL_COUNTER+4
PROCESS_OFFSET_PRIO_NEXT		equ		PROCESS_OFFSET_PRIOPRITY+4
PROCESS_OFFSET_SIGNAL			equ		PROCESS_OFFSET_PRIO_NEXT+4
PROCESS_OFFSET_BLOCKED			equ		PROCESS_OFFSET_SIGNAL+4
PROCESS_OFFSET_SIGACTION		equ		PROCESS_OFFSET_BLOCKED+4
PROCESS_OFFSET_EXIT_CODE		equ		PROCESS_OFFSET_SIGACTION + NSIG * SIZE_OF_SIGACTION
PROCESS_OFFSET_ERRNO			equ		PROCESS_OFFSET_EXIT_CODE + 4
PROCESS_OFFSET_TTY				equ		PROCESS_OFFSET_ERRNO + 4
PROCESS_OFFSET_PGRP				equ		PROCESS_OFFSET_TTY + 4
PROCESS_OFFSET_SESSION			equ		PROCESS_OFFSET_PGRP + 4
PROCESS_OFFSET_LEADER			equ		PROCESS_OFFSET_SESSION + 4
PROCESS_OFFSET_UID				equ		PROCESS_OFFSET_LEADER + 4
PROCESS_OFFSET_EUID				equ		PROCESS_OFFSET_UID + 4
PROCESS_OFFSET_SUID				equ		PROCESS_OFFSET_EUID + 4
PROCESS_OFFSET_GID				equ		PROCESS_OFFSET_SUID + 4
PROCESS_OFFSET_EGID				equ		PROCESS_OFFSET_GID + 4
PROCESS_OFFSET_SGID				equ		PROCESS_OFFSET_EGID + 4
PROCESS_OFFSET_ALARM			equ		PROCESS_OFFSET_SGID + 4
PROCESS_OFFSET_UTIME			equ		PROCESS_OFFSET_ALARM+4
PROCESS_OFFSET_STIME			equ		PROCESS_OFFSET_UTIME+4
PROCESS_OFFSET_CUTIME			equ		PROCESS_OFFSET_STIME+4
PROCESS_OFFSET_CSTIME			equ		PROCESS_OFFSET_CUTIME+4
PROCESS_OFFSET_START_TIME		equ		PROCESS_OFFSET_CSTIME+4
PROCESS_OFFSET_UMASK			equ		PROCESS_OFFSET_START_TIME+4
PROCESS_OFFSET_PWD				equ		PROCESS_OFFSET_UMASK+4
PROCESS_OFFSET_ROOT				equ		PROCESS_OFFSET_PWD+4
PROCESS_OFFSET_EXECUTABLE		equ		PROCESS_OFFSET_ROOT+4
PROCESS_OFFSET_CLOSE_ON_EXEC	equ		PROCESS_OFFSET_EXECUTABLE+4
PROCESS_OFFSET_FILEP			equ		PROCESS_OFFSET_CLOSE_ON_EXEC+4
PROCESS_OFFSET_VZONES			equ		PROCESS_OFFSET_FILEP + 4 * NR_OPEN
PROCESS_OFFSET_BRK_OFFSET_IN_VZONES	equ	PROCESS_OFFSET_VZONES + 4 * NR_VZONES_PER_PROCESS
PROCESS_OFFSET_CR3				equ		PROCESS_OFFSET_BRK_OFFSET_IN_VZONES + 4
PROCESS_OFFSET_ESP				equ		PROCESS_OFFSET_CR3+4
PROCESS_OFFSET_EBP				equ		PROCESS_OFFSET_ESP+4
PROCESS_OFFSET_EFLAGS			equ		PROCESS_OFFSET_EBP+4
PROCESS_OFFSET_FPUSSE			equ		PROCESS_OFFSET_EFLAGS+4
PROCESS_OFFSET_INT_CONTENT		equ		PROCESS_OFFSET_FPUSSE+4


PROCESS_TEXT_BASE 		equ		0x50000000
PROCESS_STACK_TOP		equ		0xe0000000
PROCESS_STACK0_TOP		equ		0x20000000

%endif
